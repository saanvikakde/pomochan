{
  "name": "Pomochan",
  "description": "Pomochan Pomodoro Assistant",
  "version": "1.0",
  "manifest_version": 3,

  "action": {
    "default_popup": "pomochan.html",
    "default_icon": "assets/neko.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],

  "host_permissions": [
    "http://127.0.0.1:5000/"
  ]
}
